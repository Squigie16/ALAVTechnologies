@{
    Layout = "_AdminLayout";
    string aboutUsHeader = ViewData["AboutUsHeader"] as string;
    string aboutUsPara = ViewData["AboutUsPara"] as string;
    string aboutUsLloyd = ViewData["AboutUsLloyd"] as string;
    string aboutUsStephanie = ViewData["AboutUsStephanie"] as string;
}
<html>
<head>
    <link rel="stylesheet" href="~/css/AdminBlog.css" />
</head>
<body>
    <h2>Edit About Us Page Contents</h2>

    <form asp-action="EditAboutUs" method="post">
        <label>About Us Header</label>
        <input name="header" type="text" value="@aboutUsHeader" required />
        <br />

        <label>Paragraph</label>
        <textarea name="paragraph" required>@aboutUsPara</textarea><br />

        <label>Description for Lloyd</label>
        <textarea name="lloyd" required>@aboutUsLloyd</textarea><br />

        <label>Description for Stephanie</label>
        <textarea name="stephanie" required>@aboutUsStephanie</textarea><br />
        <input type="submit" value="Save Changes" /><br />
    </form>
    <br />

</body>

</html>
