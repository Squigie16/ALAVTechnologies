@model LloydStephanieRealty.Models.Blog
@{
    Layout = "_AdminLayout";
}

<h2>Create new blog post</h2>

<form asp-action="AddBlog" method="post" style="width:75%;" class="m-2">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="Title">
            Title
            <input asp-for="Title" type="text" style="" class="form-control" placeholder="The Title goes here..." />
        </label>
    </div>
    <div class="form-group">
        <label asp-for="Description">
            Content
            <textarea asp-for="Description" class="form-control" style="height: 300px;" placeholder="What would you like to write?"></textarea>
        </label>
    </div>
    <input type="submit" style="width: auto; font-weight: 600;" value="Post" /><br />
</form>