@model IQueryable<LloydStephanieRealty.Models.MailingListUser>
@{
    Layout = "_AdminLayout";
}
<html>
<head>
    <link rel="stylesheet" href="~/css/AdminBlog.css" />
</head>
<body>
    <h2>Manage Blogs</h2>
    <table>
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email Address</th>
                <th>Phone Number</th>
                <th>Looking To Sell?</th>
                <th>Looking To Buy?</th>
                <th>Neighbourhood's of Interest</th>
                <th>Remove Subscriber</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.Email</td>
                    <td>@user.PhoneNumber</td>
                    <td>@user.IsLookingToSell</td>
                    <td>@user.IsLookingToBuy</td>
                    <td>@user.NeighbourhoodOfInterest</td>
                    <td>
                        <form asp-action="DeleteUser" method="post">
                            <input type="hidden" value="@user.ID" name="ID" />
                            <button type="submit">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <br />
</body>

</html>
